<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.abc.s3.notice.NoticeDAO">
	
	<update id="setHitUpdate" parameterType="com.abc.s3.notice.NoticeDTO">
		update notice set title=#{title}, writer=#{writer}, contents=#{contents}, hit=#{hit}, regdate=#{regdate} where num=#{num}
	</update>
	
	<update id="setUpdate" parameterType="com.abc.s3.notice.NoticeDTO">
		update notice set hit=#{hit} where num=#{num}
	</update>

	<insert id="setInsert" parameterType="com.abc.s3.notice.NoticeDTO">
		insert into notice values(notice_seq.nextval, #{title},#{writer},#{contents},#{hit},#{regdate})
	</insert>
	
	<select id="getSelect" parameterType="com.abc.s3.notice.NoticeDTO" resultType="com.abc.s3.notice.NoticeDTO">
		select * from notice where num=#{num}
	</select>
	
	<select id="getList" resultType="com.abc.s3.notice.NoticeDTO">
		select * from notice order by num desc
	</select>
	
	<delete id="setDelete" parameterType="com.abc.s3.notice.NoticeDTO">
		delete notice where num = #{num}
	</delete>


</mapper>