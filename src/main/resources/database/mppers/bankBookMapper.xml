<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.abc.s3.bankbook.BankBookDAO">
	<insert id="setWrite" parameterType="com.abc.s3.bankbook.BankBookDTO">
		insert into bankbook values(bank_seq.nextval, #{bookName},#{bookRate},#{bookSale})
	</insert>
	
	<select id="getSelect" parameterType="java.lang.Long" resultType="com.abc.s3.bankbook.BankBookDTO">
		select * from bankbook where bookNumber=#{num}
	</select>
	
	<select id="getList" resultType="com.abc.s3.bankbook.BankBookDTO">
		select * from bankbook order by bookNumber desc
	</select>

</mapper>  